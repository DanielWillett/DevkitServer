<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <ProjectGuid>C0FAB04D-A5EF-4A40-88EC-4F8F9FB24180</ProjectGuid>
    <TargetFramework>net481</TargetFramework>
    <AssemblyTitle>$(DSName)</AssemblyTitle>
    <Product>$(DSName)</Product>
    <Copyright>Copyright ©  2023</Copyright>
    <OutputPath>bin\$(Configuration)\</OutputPath>
    <LangVersion>preview</LangVersion>
    <Nullable>enable</Nullable>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <AppendRuntimeIdentifierToOutputPath>false</AppendRuntimeIdentifierToOutputPath>
    <RepositoryUrl>https://github.com/DanielWillett/DevkitServer.git</RepositoryUrl>
    <Configurations>ClientDebug;ClientRelease;ServerDebug;ServerRelease</Configurations>
    <AllowUnsafeBlocks>True</AllowUnsafeBlocks>
    <ImplicitUsings>enable</ImplicitUsings>
    <GenerateDocumentationFile>True</GenerateDocumentationFile>
    <NoWarn>1701;1702,1591,1587,1711,1735,1573,1574,1570,1584,1658</NoWarn>
  </PropertyGroup>
  <PropertyGroup>
    <DisableImplicitFrameworkReferences>true</DisableImplicitFrameworkReferences>
    <PackageId>$(DSName)</PackageId>
    <Title>$(DSName)</Title>
    <Version>0.0.1</Version>
    <Authors>DanielWillett</Authors>
    <Company>DanielWillett</Company>
    <Description>Module for Unturned that enables multi-user map editing.</Description>
    <PackageProjectUrl>https://github.com/DanielWillett/DevkitServer</PackageProjectUrl>
    <PackageTags>unturned, module, map, editor, multiplayer</PackageTags>
    <PackageReleaseNotes>https://github.com/DanielWillett/DevkitServer/releases</PackageReleaseNotes>
    <PackageLicenseExpression>GPL-3.0-only</PackageLicenseExpression>
    <PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
    <RepositoryUrl>$(PackageProjectUrl)</RepositoryUrl>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <IncludeSymbols>True</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <AssemblyName>$(DSName)</AssemblyName>
    <RootNamespace>DevkitServer</RootNamespace>
    <NeutralLanguage>en-US</NeutralLanguage>
    <AssemblyVersion>$(Version).0</AssemblyVersion>
    <FileVersion>$(Version).0</FileVersion>
  </PropertyGroup>
  
  <PropertyGroup Condition="$(DefineConstants.Contains(SERVER))">
    <DSName>DevkitServer.Server</DSName>
  </PropertyGroup>
  <PropertyGroup Condition="$(DefineConstants.Contains(CLIENT))">
    <DSName>DevkitServer.Client</DSName>
  </PropertyGroup>

  <ItemGroup>
    <None Include="README.md" Pack="true" PackagePath="\" />
  </ItemGroup>

  <!-- Signing -->
  <PropertyGroup Condition="'$(Configuration)'=='ClientRelease' Or '$(Configuration)'=='ServerRelease'">
    <SignAssembly>True</SignAssembly>
    <AssemblyOriginatorKeyFile>C:\Users\danny\OneDrive\Documents\DevkitServer\devkitserver.dll.snk</AssemblyOriginatorKeyFile>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='ClientDebug|AnyCPU'">
    <DebugType>portable</DebugType>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='ClientRelease|AnyCPU'">
    <DebugType>portable</DebugType>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='ServerDebug|AnyCPU'">
    <DebugType>portable</DebugType>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='ServerRelease|AnyCPU'">
    <DebugType>portable</DebugType>
  </PropertyGroup>

  <Import Project="$(SolutionDir)Common.targets" />
  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="SET &quot;sourcedir=$(OutDir)&#xD;&#xA;SET &quot;config=$(ConfigurationName)&#xD;&#xA;ECHO Building %25config%25&#xD;&#xA;IF %25config%25 == ClientDebug (&#xD;&#xA; XCOPY /v /y &quot;%25sourcedir%25\$(ProjectName).dll*&quot; &quot;$(ClientPath)\Modules\DevkitServer\Bin\$(ProjectName)_Client.dll*&quot;&#xD;&#xA; XCOPY /v /y &quot;%25sourcedir%25\$(ProjectName).pdb*&quot; &quot;$(ClientPath)\Modules\DevkitServer\Bin\$(ProjectName)_Client.pdb*&quot;&#xD;&#xA; XCOPY /v /y &quot;%25sourcedir%25\$(ProjectName).xml*&quot; &quot;$(ClientPath)\Modules\DevkitServer\Bin\$(ProjectName)_Client.xml*&quot;&#xD;&#xA; XCOPY /v /y &quot;%25sourcedir%25\$(ProjectName).dll*&quot; &quot;$(ServerPath)\Modules\DevkitServer\Bin\$(ProjectName)_Client.dll*&quot;&#xD;&#xA; XCOPY /v /y &quot;%25sourcedir%25\$(ProjectName).pdb*&quot; &quot;$(ServerPath)\Modules\DevkitServer\Bin\$(ProjectName)_Client.pdb*&quot;&#xD;&#xA; XCOPY /v /y &quot;%25sourcedir%25\$(ProjectName).xml*&quot; &quot;$(ServerPath)\Modules\DevkitServer\Bin\$(ProjectName)_Client.xml*&quot;&#xD;&#xA;) ELSE IF %25config%25 == ClientRelease (&#xD;&#xA; XCOPY /v /y &quot;%25sourcedir%25\$(ProjectName).dll*&quot; &quot;$(ClientPath)\Modules\DevkitServer\Bin\$(ProjectName)_Client.dll*&quot;&#xD;&#xA; XCOPY /v /y &quot;%25sourcedir%25\$(ProjectName).pdb*&quot; &quot;$(ClientPath)\Modules\DevkitServer\Bin\$(ProjectName)_Client.pdb*&quot;&#xD;&#xA; XCOPY /v /y &quot;%25sourcedir%25\$(ProjectName).xml*&quot; &quot;$(ClientPath)\Modules\DevkitServer\Bin\$(ProjectName)_Client.xml*&quot;&#xD;&#xA; XCOPY /v /y &quot;%25sourcedir%25\$(ProjectName).dll*&quot; &quot;$(ServerPath)\Modules\DevkitServer\Bin\$(ProjectName)_Client.dll*&quot;&#xD;&#xA; XCOPY /v /y &quot;%25sourcedir%25\$(ProjectName).pdb*&quot; &quot;$(ServerPath)\Modules\DevkitServer\Bin\$(ProjectName)_Client.pdb*&quot;&#xD;&#xA; XCOPY /v /y &quot;%25sourcedir%25\$(ProjectName).xml*&quot; &quot;$(ServerPath)\Modules\DevkitServer\Bin\$(ProjectName)_Client.xml*&quot;&#xD;&#xA;) ELSE IF %25config%25 == ServerDebug (&#xD;&#xA; XCOPY /v /y &quot;%25sourcedir%25\$(ProjectName).dll*&quot; &quot;$(ClientPath)\Modules\DevkitServer\Bin\$(ProjectName)_Server.dll*&quot;&#xD;&#xA; XCOPY /v /y &quot;%25sourcedir%25\$(ProjectName).pdb*&quot; &quot;$(ClientPath)\Modules\DevkitServer\Bin\$(ProjectName)_Server.pdb*&quot;&#xD;&#xA; XCOPY /v /y &quot;%25sourcedir%25\$(ProjectName).xml*&quot; &quot;$(ClientPath)\Modules\DevkitServer\Bin\$(ProjectName)_Server.xml*&quot;&#xD;&#xA; XCOPY /v /y &quot;%25sourcedir%25\$(ProjectName).dll*&quot; &quot;$(ServerPath)\Modules\DevkitServer\Bin\$(ProjectName)_Server.dll*&quot;&#xD;&#xA; XCOPY /v /y &quot;%25sourcedir%25\$(ProjectName).pdb*&quot; &quot;$(ServerPath)\Modules\DevkitServer\Bin\$(ProjectName)_Server.pdb*&quot;&#xD;&#xA; XCOPY /v /y &quot;%25sourcedir%25\$(ProjectName).xml*&quot; &quot;$(ServerPath)\Modules\DevkitServer\Bin\$(ProjectName)_Server.xml*&quot;&#xD;&#xA;) ELSE IF %25config%25 == ServerRelease (&#xD;&#xA; XCOPY /v /y &quot;%25sourcedir%25\$(ProjectName).dll*&quot; &quot;$(ClientPath)\Modules\DevkitServer\Bin\$(ProjectName)_Server.dll*&quot;&#xD;&#xA; XCOPY /v /y &quot;%25sourcedir%25\$(ProjectName).pdb*&quot; &quot;$(ClientPath)\Modules\DevkitServer\Bin\$(ProjectName)_Server.pdb*&quot;&#xD;&#xA; XCOPY /v /y &quot;%25sourcedir%25\$(ProjectName).xml*&quot; &quot;$(ClientPath)\Modules\DevkitServer\Bin\$(ProjectName)_Server.xml*&quot;&#xD;&#xA; XCOPY /v /y &quot;%25sourcedir%25\$(ProjectName).dll*&quot; &quot;$(ServerPath)\Modules\DevkitServer\Bin\$(ProjectName)_Server.dll*&quot;&#xD;&#xA; XCOPY /v /y &quot;%25sourcedir%25\$(ProjectName).pdb*&quot; &quot;$(ServerPath)\Modules\DevkitServer\Bin\$(ProjectName)_Server.pdb*&quot;&#xD;&#xA; XCOPY /v /y &quot;%25sourcedir%25\$(ProjectName).xml*&quot; &quot;$(ServerPath)\Modules\DevkitServer\Bin\$(ProjectName)_Server.xml*&quot;&#xD;&#xA;) ELSE (&#xD;&#xA; ECHO No files copied.&#xD;&#xA;)" />
  </Target>

  <ItemGroup>
    <Compile Remove="DevkitServer.Resources\**" />
    <Compile Remove="DevkitServer.Tests\**" />
    <Compile Remove="DevkitServer.Launcher\**" />
    <Compile Remove="Module\**" />
    <Compile Remove="packages\**" />
    <Compile Remove="TestPlugin\**" />
    <Compile Remove="Common.targets" />
    <EmbeddedResource Remove="DevkitServer.Resources\**" />
    <EmbeddedResource Remove="DevkitServer.Tests\**" />
    <EmbeddedResource Remove="DevkitServer.Launcher\**" />
    <EmbeddedResource Remove="Module\**" />
    <EmbeddedResource Remove="packages\**" />
    <EmbeddedResource Remove="TestPlugin\**" />
    <EmbeddedResource Remove="Common.targets" />
    <None Remove="DevkitServer.Launcher\**" />
    <None Remove="DevkitServer.Resources\**" />
    <None Remove="DevkitServer.Tests\**" />
    <None Remove="Module\**" />
    <None Remove="packages\**" />
    <None Remove="TestPlugin\**" />
    <None Remove="Common.targets" />
    <None Remove="Unturned.targets" />
  </ItemGroup>

  <!-- Newtonsoft.Json -->
  <ItemGroup Condition="$(DefineConstants.Contains(SERVER))">
    <Reference Include="Newtonsoft.Json">
      <HintPath>$(ServerPath)\Unturned_Data\Managed\Newtonsoft.Json.dll</HintPath>
    </Reference>
  </ItemGroup>
  <ItemGroup Condition="$(DefineConstants.Contains(CLIENT))">
    <Reference Include="Newtonsoft.Json">
      <HintPath>$(ClientPath)\Unturned_Data\Managed\Newtonsoft.Json.dll</HintPath>
    </Reference>
  </ItemGroup>

</Project>