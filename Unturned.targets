        <Reference Include="com.rlabrecque.steamworks.net">
            <HintPath>$(ClientPath)\Unturned_Data\Managed\com.rlabrecque.steamworks.net.dll</HintPath>
        </Reference>
        <Reference Include="SDG.NetTransport">
