        </Reference>
        <Reference Include="UnityEngine.UnityWebRequestModule">
            <HintPath>$(ClientPath)\Unturned_Data\Managed\UnityEngine.UnityWebRequestModule.dll</HintPath>
        </Reference>

        <!-- Third-Party -->
        <Reference Include="Newtonsoft.Json_2">
            <HintPath>$(ClientPath)\Unturned_Data\Managed\Newtonsoft.Json.dll</HintPath>
            <FusionName>Newtonsoft.Json, Version=7.0.0.0, Culture=neutral, PublicKeyToken=30ad4fe6b2a6aeed</FusionName>
            <SpecificVersion>true</SpecificVersion>
            <Aliases>NSJ</Aliases>
        </Reference>
        <Reference Include="AstarPathfindingProject">
            <HintPath>$(ClientPath)\Unturned_Data\Managed\AstarPathfindingProject.dll</HintPath>
        </Reference>
    </ItemGroup>
</Project>