        </Reference>

        <!-- Unity -->
        <Reference Include="UnityEngine">
            <HintPath>$(ClientPath)\Unturned_Data\Managed\UnityEngine.dll</HintPath>
        </Reference>
        <Reference Include="UnityEngine.CoreModule">
            <HintPath>$(ClientPath)\Unturned_Data\Managed\UnityEngine.CoreModule.dll</HintPath>
        </Reference>
        <Reference Include="UnityEx">
            <HintPath>$(ClientPath)\Unturned_Data\Managed\UnityEx.dll</HintPath>
        </Reference>
        <Reference Include="UnturnedDat">
            <HintPath>$(ClientPath)\Unturned_Data\Managed\UnturnedDat.dll</HintPath>
        </Reference>
        <Reference Include="Unity.TextMeshPro">
            <HintPath>$(ClientPath)\Unturned_Data\Managed\Unity.TextMeshPro.dll</HintPath>
        </Reference>
        <Reference Include="UnityEngine.ImageConversionModule">
            <HintPath>$(ClientPath)\Unturned_Data\Managed\UnityEngine.ImageConversionModule.dll</HintPath>
        </Reference>
        <Reference Include="UnityEngine.IMGUIModule">
            <HintPath>$(ClientPath)\Unturned_Data\Managed\UnityEngine.IMGUIModule.dll</HintPath>
        </Reference>
        <Reference Include="UnityEngine.InputModule">
